# ========================================
# EMAIL ADDRESS FIELD
# ========================================

field:EmailField a :Field ;
    rdfs:label "Email Address" ;
    :fieldType "email" ;
    :validationPredicate "isEmail" ;
    :required true ;
    :spellingRequired true ;
    :hasASRGrammar field:EmailASRGrammar ;
    :hasTTSPrompt field:EmailTTSPrompt .

field:EmailASRGrammar a asr:ASRGrammar ;
    asr:grammarFormat "JSGF" ;
    asr:grammarText """#JSGF V1.0;
grammar email;

public <response> = [my email is] <email> |
                    [it's] <email>;

<email> = <localpart> at <domain>;

<localpart> = <letter_or_digit> [<localpart>];

<domain> = <letter_or_digit> [dot] <letter_or_digit> [<domain>];

<letter_or_digit> = alpha | bravo | charlie | delta | echo | foxtrot | golf | hotel |
                    india | juliet | kilo | lima | mike | november | oscar | papa |
                    quebec | romeo | sierra | tango | uniform | victor | whiskey |
                    x-ray | yankee | zulu |
                    zero | one | two | three | four | five | six | seven | eight | nine |
                    dot | dash | underscore;
""" .

field:EmailTTSPrompt a tts:TTSPrompt ;
    tts:mainText "What is your email address?" ;
    tts:variant1 "What's your email?" ;
    tts:variant2 "Please provide your email address" ;
    tts:variant3 "Could you tell me your email?" ;
    tts:variant4 "What email address should I use?" .

field:EmailField resp:hasApplicablePattern
    resp:DirectAnswer,
    resp:MyXIs,
    resp:ItsX .


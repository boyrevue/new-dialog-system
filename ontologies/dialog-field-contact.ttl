            <letter> <digit> [<digit>];

<inward> = <digit> <letter> <letter>;

<letter> = alpha | bravo | charlie | delta | echo | foxtrot | golf | hotel |
           india | juliet | kilo | lima | mike | november | oscar | papa |
           quebec | romeo | sierra | tango | uniform | victor | whiskey |

# ========================================
# POSTCODE FIELD
# ========================================

field:PostcodeField a :Field ;
    rdfs:label "Postcode" ;
    :fieldType "text" ;
    :validationPredicate "isPostcode" ;
    :required true ;
    :spellingRequired true ;
    :hasASRGrammar field:PostcodeASRGrammar ;

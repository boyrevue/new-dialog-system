@prefix : <http://diggi.io/ontology/dialog#> .
@prefix field: <http://diggi.io/ontology/field#> .
@prefix asr: <http://diggi.io/ontology/asr#> .
@prefix tts: <http://diggi.io/ontology/tts#> .
@prefix resp: <http://diggi.io/ontology/response#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# Contact/Personal Information Field Ontology
<http://diggi.io/ontology/field-contact> a owl:Ontology ;
    rdfs:label "Contact/Personal Information Field Ontology" ;
    rdfs:comment "Reusable contact and personal information field definitions with ASR grammars" ;
    owl:versionInfo "1.0" .

# ========================================
# FIRST NAME FIELD
# ========================================

field:FirstNameField a :Field ;
    rdfs:label "First Name" ;
    :fieldType "text" ;
    :validationPredicate "isAlpha" ;
    :required true ;
    :spellingRequired true ;
    :hasASRGrammar field:FirstNameASRGrammar ;
    :hasTTSPrompt field:FirstNameTTSPrompt .

field:FirstNameASRGrammar a asr:ASRGrammar ;
    asr:grammarFormat "JSGF" ;
    asr:grammarText """#JSGF V1.0;
grammar first_name;

public <response> = [my first name is] <name> |
                    [my name is] <name> |
                    [my given name is] <name> |
                    [my forename is] <name> |
                    [i'm called] <name> |
                    [call me] <name> |
                    [it's] <name>;

<name> = <letter> [<name>];

<letter> = alpha | bravo | charlie | delta | echo | foxtrot | golf | hotel |
           india | juliet | kilo | lima | mike | november | oscar | papa |
           quebec | romeo | sierra | tango | uniform | victor | whiskey |
           x-ray | yankee | zulu;
""" .

field:FirstNameTTSPrompt a tts:TTSPrompt ;
    tts:mainText "What is your first name?" ;
    tts:variant1 "What's your first name?" ;
    tts:variant2 "Please tell me your first name" ;
    tts:variant3 "Could you provide your first name?" ;
    tts:variant4 "What's your given name?" ;
    tts:voice "en-GB-Neural2-A" ;
    tts:rate 0.95 .

# Link to response patterns
field:FirstNameField resp:hasApplicablePattern
    resp:DirectAnswer,
    resp:MyNameIs,
    resp:ImX,
    resp:IAmX,
    resp:CallMe,
    resp:MyXIs,
    resp:ItsX .

